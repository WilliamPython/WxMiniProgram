.detailContainer {
  display: flex;
  flex-direction: column;
}

.headImg {
  width: 100%;
  height: 460rpx;
}

.avatar_data {
  padding: 10rpx;
}

.avatar_data image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.avatar_data text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.company {
  font-size: 38rpx;
  font-weight: 700;
  margin-left: 10rpx;
}

.collection_share_container {
  position: relative;
}

.collection_share {
  margin-right: 30rpx;
}

.collection_share image {
  width: 69rpx;
  height: 69rpx;
  float: right;
  margin-right: 20rpx;
}

.line {
  width: 90%;
  height: 1rpx;
  background-color: #eee;
  position: absolute;
  left: 5%;
  top: 34rpx;
  z-index: -1;
}

button {
  width: 280rpx;
  height: 80rpx;
  background: green;
  line-height: 80rpx;
  color: #fff;
}

.contentTxt {
  font-size: 32rpx;
  text-indent: 32rpx;
  margin-top: 18rpx;
}

.MusicPlayImg {
  width:60rpx;
  height:60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}