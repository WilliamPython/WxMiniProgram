<template name='listTemp'>
  <view class='listContaniner'>
    <view class='avatarInfo'>
       <image src='{{avatar}}'></image>
       <text>{{date}}</text>
    </view>
    <text class='company'>{{title}}</text>
    <image src='{{detail_img}}' class='contentImg'></image>
    <text class='contentTxt'>{{detail_content}}</text>
    <view class='loveCollection'>
      <image src='/images/icon/star.png'></image>
      <text>{{love_count}}</text>
      <image src='/images/icon/view.png'></image>
      <text>{{attention_count}}</text>
    </view>
  </view>
</template>