.movieDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center
}

.movieDetailContainer image {
  width:70%;
  height:700rpx;
  margin:20rpx 0;
}

.movie_name {
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  margin-bottom: 10rpx;
}

